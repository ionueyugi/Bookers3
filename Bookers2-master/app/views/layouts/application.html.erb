<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track':'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track':'reload' %>
  </head>
   <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
   <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Bookers</a>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
    </ul>
    <span class="navbar-text">
           <ul>
              <% if user_signed_in? %>
                <li class="fas fa-sign-out-alt">
                  <%= link_to "logout", destroy_user_session_path, method: :delete %>
                </li>
                <li class="fas fa-home">
                  <%= link_to"Home",user_path(current_user.id) %>
                </li>
                <li class="fas fa-user">
                  <%= link_to 'Usres',users_path %>
                </li>
                <li class="fas fa-book">
                  <%= link_to "Books",books_path %>
                </li>
              <% else %>
                <li class="fas fa-home">
                  <%= link_to"Home",root_path %>
                </li>
                <li class="fas fa-address-card">
                 <%= link_to "About",home_about_path %>
                </li>
                <li class="fas fa-sign-in-alt">
                  <%= link_to "sign up",new_user_registration_path %>
                </li>
                <li class="fas fa-sign-in-alt">
                  <%= link_to "login",new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
        </div>
    </span>
  </div>
</nav>
   </header>
    <body>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
  </body>
  <footer>
      <div class="container">
        <div class="row">
          <div class="col text-right">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
</html>
